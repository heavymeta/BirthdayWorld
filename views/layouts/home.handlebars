<script>

$( "#signup-email-button" ).click(function() {
  var emailIn = $( "#signup-email-field" ).val();
  var emailData = emailIn;

  $.post("/emailcollect",{email: emailData}, function(data){
  if(data.data=='done')
    {
      console.log("Success");
      $( "#email-prompt-message" ).fadeTo( "fast" , 0, function() {
        $( "#email-prompt-message" ).replaceWith('<p id="email-prompt-message">Thanks! You\'ll be hearing from us.</p>');
        $( "#signup-email-field" ).val('');
        $( "#email-prompt-message" ).fadeTo( "fast" , 1, function() {

        });
      });

    }
  });
});

function reset() {
  $( "#email-prompt-message" ).fadeTo( "fast" , 0, function() {
    $( "#email-prompt-message" ).replaceWith('<p id="email-prompt-message">Thanks! You\'ll be hearing from us.</p>');
    $( "#signup-email-field" ).val('');
    $( "#email-prompt-message" ).fadeTo( "fast" , 1, function() {
      setTimeout(reset(), 3000);
    });
  });
}
</script>

